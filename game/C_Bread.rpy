label battle_bread:
    hide screen bag
    hide screen inventory_screen
    hide screen EWinventory_screen
    hide screen EWinventory_view_new
    $ wolf_max_hp = 100
    $ wolf_hp = wolf_max_hp
    $ players_turn = False
    $ wolf_max_lust = 100
    $ wolf_lust = 0

    $ renpy.music.set_pause(True, channel='Chan1')
    $ renpy.music.set_pause(True, channel='Chan2')

    $ Battle.holyfcd = 0
    stop music


    jump battle_bread_loop


label battle_bread_loop:



    show screen simple_stats_screen
    show screen battle_menu
    show bread_fight at center
    play music"music/forest_fight_friend.ogg"





    while (wolf_hp > 0) and (Zalt.hp > 0) and(Zalt.lust <100):
        $ players_turn = True
        $ res = ui.interact()
        $ players_turn = False
        if res == "Святой Кулак":
            $ red_damage = renpy.random.randint(Zalt.MATK*2, int((Zalt.MATK*2.5)+10))
            $ wolf_hp -= red_damage
            $ Zalt.mp = min(Zalt.mp -20, Zalt.maxmp)
            $ Battle.holyfcd = 3
            $ Random = renpy.random.randint(1, 3)
            if Random == 1:
                "Ты бросаешься вперед и наносишь удар по врагу."
            elif Random == 2:
                "Ты бьешь врага своим Святым Кулаком."
            elif True:
                "С молниеносной скоростью ты поражаешь врага Святым Кулаком."
            " (Нанесенный урон - [red_damage]hp)"

        if res == "Предметы":
            $ Zalt.hp = min(Zalt.hp +5, Zalt.maxhp)
            $ cookies_left -= 1
            "*Глоток* 5hp восстановлено"

        if res == "Атака":
            $ red_damage = renpy.random.randint(max(1,Zalt.ATK-20), Zalt.ATK)
            $ Random = renpy.random.randint(0, 100)
            if Random >= Zalt.CRIT:
                $ wolf_hp -= red_damage
                "Ты выхватываешь меч и бросаешься в атаку.\n(Damage dealt- [red_damage]hp)"
            elif True:
                $ qty = red_damage*2
                $ wolf_hp -= red_damage*2
                "Ты выхватываешь меч и бросаешься в атаку.\n{b}{color=#ffd65c}(Critical damage! -[qty]hp){/color}"

        if res == "Подчиниться":
            e "Я больше не могу драться.."
            "Враг слишком силен."
            "Тебя сбивают с ног."
            jump battle_bread_lose
        if res == "Флиртовать":
            $ Random = renpy.random.randint(1, 5)
            if Random == 1:
                $ Zalt.flirt = renpy.random.randint((Zalt.cha*2)+3, (Zalt.cha*2)+5)
                $ wolf_lust = wolf_lust+Zalt.flirt
                "Ты прижимаешь Брэд к полу и терся бедрами о его броню."
                "Брэд громко стонет, прежде чем пнуть тебя в пах, заставляя отпустить его."
            elif Random == 2:
                $ Zalt.flirt = renpy.random.randint((Zalt.cha*2)+3, (Zalt.cha*2)+5)
                $ wolf_lust = wolf_lust+Zalt.flirt
                "Отбросив рыцаря назад сильным толчком, ты вспыхиваешь уверенной улыбкой, прежде чем чувственно облизнуть губы."
                "Брэд громко стонет, прежде чем пнуть тебя в пах, заставляя отпустить его."
            elif Random == 3:
                $ Zalt.flirt = renpy.random.randint((Zalt.cha*2)+3, (Zalt.cha*2)+5)
                $ wolf_lust = wolf_lust+Zalt.flirt
                "Крепко сжимая его руки и шею, ты шепчешь ему в забрало все грязные вещи, которые можешь сделать с ним, пока он в доспехах. "
                "Брэд качает головой и бьет себя кулаком, чтобы сосредоточиться, но вы можете видеть, как его глаза фокусируются на вашей промежности."
            elif True:
                $ Random = renpy.random.randint(1, 3)
                if Random == 1:
                    "Ты прижимаешь Брэда к полу и трешься бедрами о его броню."
                    "Булова Брэда бьет тебя в живот, останавливая от попыток соблазнить его."
                elif Random == 2:
                    "Отбросив рыцаря назад сильным толчком, ты вспыхиваешь уверенной улыбкой, прежде чем чувственно облизнуть губы."
                    "Булова Брэда бьет тебя в живот, останавливая от попыток соблазнить его."
                elif True:
                    "Крепко сжимая его руки и шею, ты шепчешь ему в забрало все грязные вещи, которые можешь сделать с ним, пока он в доспехах. "
                    "Булова Брэда бьет тебя в живот, останавливая от попыток соблазнить его."
            if wolf_lust >= 100:
                hide screen simple_stats_screen
                hide screen battle_menu
                hide screen battle_skill
                hide screen battle_item

                stop music
                jump battle_bread_win
            elif True:
                pass
        if res == "Бандаж":
            $ Zalt.heal = renpy.random.randint((Zalt.int*2)+20, (Zalt.int*2)+35)
            $ Zalt.hp = min(Zalt.hp+Zalt.heal, Zalt.maxhp)
            $ Zalt.mp = min(Zalt.mp -20, Zalt.maxmp)
            "*Бандаж* [Zalt.heal]hp восстановлено"
        if res == "Зелье Здоровья":
            $ Zalt.heal = 60
            $ Zalt.hp = min(Zalt.hp+Zalt.heal, Zalt.maxhp)
            $ jane_inv.drop(hp_potion)
            "*Зелье здоровья* [Zalt.heal]hp восстановлено"
        if res == "Зелье маны":
            $ Zalt.heal = 60
            $ Zalt.mp = min(Zalt.mp+Zalt.heal, Zalt.maxmp)
            $ jane_inv.drop(mp_potion)
            "*Зелье маны* [Zalt.heal]mp восстановлено"
        if res == "Сбежать":
            "Ты не можешь сбежать!"
        elif True:
            pass

        $ Random = renpy.random.randint(1, 3)
        if Random == 1:
            $ Random = renpy.random.randint(1, 100)
            if Random <= Battle.dodge:
                "Брэд издали размахивает цепной булавой."
                "Металлическая цепь вытягивается наружу и проносится через пространство между вами."
                "Но ты увернулся от его атаки!"
            elif True:
                $ wolf_damage = renpy.random.randint(15, 45)
                $ Zalt.hp -= wolf_damage
                "Брэд издали размахивает цепной булавой."
                "Металлическая цепь вытягивается наружу и проносится через пространство между вами."
                "Булова ударяет тебя по руке прежде, чем ты успеваешь блокировать."
        elif Random == 2:
            $ Random = renpy.random.randint(1, 100)
            if Random <= Battle.dodge:
                "Брэд замахивается на тебя когтями."
                "Но ты увернулся от его атаки!"
            elif True:
                $ wolf_damage = renpy.random.randint(15, 35)
                $ Zalt.hp -= wolf_damage
                "Брэд замахивается на тебя когтями, глубоко режет."
        elif True:
            $ Random = renpy.random.randint(1, 100)
            if Random <= Battle.dodge:
                "Брэд бросается вперед и замахивается тебе в голову."
                "Но ты увернулся от его атаки!"
            elif True:
                $ wolf_damage = renpy.random.randint(20, 40)
                $ Zalt.hp -= max(1,wolf_damage-Zalt.DEF)
                "Брэд бросается вперед и замахивается тебе в голову."
                "Ты смягчаешь удар, блокируя его мечом, но удар все равно причиняет боль."

        if Battle.holyfcd !=0:
            $ Battle.holyfcd = Battle.holyfcd-1





    if wolf_hp <= 0:
        if Zalt.hp <= 0:
            jump battle_bread_kill
        elif True:

            jump battle_bread_kill

    elif Zalt.hp <= 0:
        jump battle_bread_lose
    elif Zalt.lust >= Zalt.maxlust:
        "Ты слишком возбужден, чтобы драться."
        "Ты падаешь на землю."
        jump battle_bread_lose
    elif True:
        jump battle_bread_loop


